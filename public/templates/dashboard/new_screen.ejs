<% layout(layoutPathLogged) -%>
<% stylesheet('/css/screensLayout.css') %>
<% stylesheet('css/style_login.css') %>

<div id="right-container"  ng-app="ScreensApp" ng-controller="NewScreenController as ctrScreen">
    <div ng-show="step == 0">
        <div id="bar-small">
            <div class="space-content-new-screen">
                <a href="/screens" class="btn btn-info"><i class="fa fa-angle-double-left"></i>&nbsp;&nbsp;Back</a>
            </div>
            <div style="display: inline-block">Choose your plataform -<span style="font-weight: bold"> Step 1/3</span> </div>
            <div class="search-content">
                <div ng-click="ctrScreen.next()" class="btn btn-success">Next&nbsp;&nbsp;<i class="fa fa-angle-double-right"></i></div>
            </div>
        </div>
    </div>
    <div ng-show="step == 1">
        <div id="bar-small">
            <div class="space-content-new-screen">
                <div ng-click="ctrScreen.back()" class="btn btn-info"><i class="fa fa-angle-double-left"></i>&nbsp;&nbsp;Back</div>
            </div>
            <div style="display: inline-block">Download the installation file - <span style="font-weight: bold">Step 2/3</span> </div>
            <div class="search-content">
                <div ng-click="ctrScreen.next()" class="btn btn-success">Next&nbsp;&nbsp;<i class="fa fa-angle-double-right"></i></div>
            </div>
        </div>
    </div>
    <div ng-show="step == 2">
        <div id="bar-small">
            <div class="space-content-new-screen">
                <div ng-click="ctrScreen.back()" class="btn btn-info"><i class="fa fa-angle-double-left"></i>&nbsp;&nbsp;Back</div>
            </div>
            <div style="display: inline-block">Insert your screen ID -<span style="font-weight: bold"> Step 3/3</span> </div>
        </div>
        <div>

            <div ng-form="form">
                <div id="right-space-minor">
                    <div id="output2" ng-show="error" class="alert2 alert-danger">
                        {{serverErrorMessage}}
                    </div>
                    <div class="margin_top_space_minor">
                        <p class="float">Name</p>
                        <input type="text" ng-model="title" name="title" required tabindex="1" class="input-style-large" placeholder="Name of the Screen (place, description...)">
                    </div>
                    <div class="margin_top_space_minor">
                        <p class="float">Code</p>
                        <input type="text" name="screenCode" ng-model="code"  type="text" tabindex="2" class="input-style-large" placeholder="screen code" required>
                    </div>
                </div>
                <div class="right-content">
                    <div class="btn btn-success" ng-disabled="!form.$valid" ng-click="ctrScreen.createScreen()" type="submit" >Add Screen</div>
                </div>
            </div>
        </div>

    </div>


</div>